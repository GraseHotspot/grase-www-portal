{% extends "layout.html.twig" %}

{% block page_title %}
    {% trans %}Advanced Settings{% endtrans %}
{% endblock page_title %}

{% block page_subtitle %}

{% endblock page_subtitle %}

{% block content %}

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{% trans %}Groups{% endtrans %}</h3>
            </div>
            <div class="box-body">
                <table id="advancedSettings" class="table table-bordered table-hover dataTable"
                       data-paging="true" data-page-length="25" data-searching="true"
                       data-ordering="true" data-info="true" data-autowidth="true">
                    <thead>
                    <tr>
                        <th>{% trans %}Name{% endtrans %}</th>
                        <th>{% trans %}Value{% endtrans %}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for setting in settings %}
                        <tr>
                            <td>{{ setting.name }}</td>
                            <td>{{ setting.value }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
    </div>

{% endblock %}
